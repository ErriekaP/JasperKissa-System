 {{> nav-bar}}
{{#each rows}}
    <div class="row">
      <div class="col-lg-3 m-8">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="/public/user.png" alt="avatar"
              class="rounded-circle img-fluid style="width: 150px;">
            <h5 class="my-3">{{this.username}}</h5>
            <p class="text-muted mb-1">{{this.position}}</p>
          </div>
        </div>
      </div>
      <div class="col-lg-8 m-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Employee ID</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{this.emp_id}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{this.emp_firstname}} {{this.emp_lastname}} {{this.employeeSuffix}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{this.email}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Phone</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{this.phone}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Address</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{this.address}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Position</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{this.position}}</p>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
  {{/each}}
</section>