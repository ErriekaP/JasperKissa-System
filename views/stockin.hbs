<div class="row">
    
  <div class="p-2"><h2>Stock Entry</h2></div>

 <div class="d-flex justify-content-between"> 
    <div class="p-2">
     <form class="d-flex" role="search" method="POST" action="/stockentry" novalidate>
       <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
          <button class="btn btn-outline-dark" type="submit">Search</button>
          </form>     
        </div>
        <div class="row">
          <div class="d-flex justify-content-end">
            <a href="/StockinCartPage" type="button" class="btn btn-secondary align-self-center "><i class="bi bi-box2"></i> See Items Added</a>

  </div>
</div>

  
      </div>
      
</div> 


{{#if alert}}
<div class="alert alert-success alert-dismissible fade show" role="alert" ng-show="show_alert">
  {{alert}}   
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

</div>

{{/if}}


<div class="d-flex justify-content-start">
  

<table class="table table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Item ID</th> 
      <th scope="col">Item Name</th>
      <th scope="col">Brand</th>
      <th scope="col">Item Category</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price</th>
      <th scope="col">Stock</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>


    {{#each rows}}
    <form class="row g-3 needs-validation" method="POST" action="/stockentry" novalidate>

    <tr>


      <td>{{this.item_id}}</td>
      <td>{{this.item_name}}</td>
      <td>{{this.brand_name}}</td>
      <td>{{this.category_name}}</td>
      <td>{{this.quantity}}</td>
      <td>{{this.price}}</td>
      <td>{{this.stock}}</td>
   
      <td class="text-end">
        <a href="/viewstock/{{this.item_id}}" type="button" class="btn btn-light btn small"><i class="bi bi-eye"></i> View</a>
        <a href="/stockentry/{{this.item_id}}" type="button"  class="btn btn-secondary btn small"><i class="bi bi-plus-lg"></i> Add</a>

     
      </td>
    </tr>
  {{/each}}
  </form>



  </tbody>
</table> 