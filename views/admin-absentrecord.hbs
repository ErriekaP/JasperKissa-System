  
<div class="p-2"><h2>Absentee Record</h2></div>
  {{!<div class="col-6"><h1>Users</h1></div>}}
   <div class="d-flex mb-3"> 

    <div class="p-2">   
  <p></p>
    <div class="mb-3">
     <form class="d-flex" role="sortdate" method="POST" action="/admin_absentee/FindDate" novalidate>
         <input class="form-control me-2" type="date" placeholder="Sort Date" aria-label="SortDate" name="From_SortDate">
          <input class="form-control me-2" type="date" placeholder="Sort Date" aria-label="SortDate" name="To_SortDate">
    
          <button class="btn btn-outline-dark" type="submit">Search Date</button>
          </form> 
          <button class="btn btn-outline-dark" onclick="window.location.href = '/admin_attendance/'">Attendance Record</button>
          <button class="btn btn-outline-dark" onclick="window.location.href = '/admin_laterecord/'">Late Record</button>
          </div>     
        </div>
      </div>
 


<table class="table table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      
      <th scope="col">EmployeeID</th>
      <th scope="col">Full Name</th>
      <th scope="col">AttenType</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <td>{{this.emp_id}}</td>
      <td>{{this.emp_firstname}} {{this.emp_lastname}}</td>
      <td>ABSENT</td> 
    </tr>
  {{/each}}

  </tbody>
</table> 