<table class="table table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      
      <th scope="col">Transaction #</th>
      <th scope="col">Total Due</th>
      <th scope="col">Amount Received</th>
      <th scope="col">Amount Change</th>
      <th scope="col">Type of Transaction</th>
      <th scope="col">Encoded By</th>
      <th scope="col">Date & Time Added</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <th scope="row">{{this.order_trans_id}}</th>
      <td>{{this.total_due}}</td>
      <td>{{this.amount_received}}</td>
      <td>{{this.amount_change}}</td>
      <td>{{this.type_of_transaction}}</td>
      <td>{{this.emp_firstname}}</td>
      <td>{{this.date_added}}</td>
      <td> 
        <a href="/ReturnOrderPage/cancel/{{this.order_trans_id}}" type="button" class="btn btn-danger btn small" ><i class="bi bi-x-lg"></i> </a>
    </td>

    </tr>
  {{/each}}

  </tbody>
</table> 

