<div class="row">
  {{!<div class="col-6"><h1>Users</h1></div>}}
  <div class="d-flex justify-content-end">
    <a href="/addbrand" type="button" class="btn btn-primary align-self-center">Add New Category</a>

  </div>
</div>
<p></p>


<table class="table table-bordered table-hover">
  <thead class="thead-dark ">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Category Name</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>

  {{#each rows}}
  <tbody >
    <tr>
      <th scope="row">{{this.brand_id}}</th>
      <td>{{this.brand_name}}</td>
      <td class="text-end">
        <a href="/editbrand/{{this.brand_id}}" type="button" class="btn btn-light btn small"><i class="bi bi-pencil"></i>Edit</a>

      </td>
    </tr>
  {{/each}}

  </tbody>
</table> 