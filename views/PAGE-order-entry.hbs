 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/POSPage">Back</a></li>
    <li class="breadcrumb-item active" aria-current="page">Product List</li>
  </ol>
</nav>
<div class="row">
  <div class="bg-secondary p-2 text-dark bg-opacity-10 border border-2 rounded"> 
 {{#each transaction_num}}    
  <div class="fs-6"><i class="bi bi-info-square-fill"> Transaction# {{this.order_trans_id}}
   | Encoded By: {{this.emp_firstname}} {{this.emp_lastname}}
   | </i></div>
{{/each}}
</div>
 
</div> 


{{#if alert}}
<div class="alert alert-success alert-dismissible fade show" role="alert" ng-show="show_alert">
  {{alert}}   
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

</div>

{{/if}}

<p></p>



<h2>Product List</h2>
 
<div class="d-flex justify-content-between"> 
    <div class="p-2">
     <form class="d-flex" role="search" method="POST" action="/OrderEntry" novalidate>
       <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
          <button class="btn btn-outline-dark" type="submit" data-bs-toggle="modal" data-bs-target="#exampleModal">Search</button>
          
          </form>     
        </div>
  </div>    


  <div class="d-flex justify-content-start">
<table class="table table-bordered table-hover ">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Item ID</th> 
      <th scope="col">Item Name</th>
      <th scope="col">Brand</th>
      <th scope="col">Item Category</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price</th>
      <th scope="col">Stock</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
   
    {{#each rows}}
    <form class="row g-3 needs-validation" method="POST" action="/OrderEntry" novalidate>

    <tr>


      <td >{{this.item_id}}</td>
      <td>{{this.item_name}}</td>
      <td>{{this.brand_name}}</td>
      <td>{{this.category_name}}</td>
      <td>{{this.quantity}}</td>
      <td>{{this.price}}</td>
      <td>{{this.stock_from_stockin}}</td>




      <td class="text-end">

           <a href="/OrderEntry/{{this.item_id}}" type="button"  class="btn btn-secondary btn-small"><i class="bi bi-plus-lg"></i> </a>
        </div>
  </div>
</div>
     
      </td>
    </tr>
  {{/each}}
  
  </form>



  </tbody>
</table> 
</div>
