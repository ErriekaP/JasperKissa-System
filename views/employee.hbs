<div class="p-2"><h2>Employee</h2></div>
 <div class="d-flex justify-content-between">
    <div class="p-2">
     <form class="d-flex" role="search" method="POST" action="/FindEmployee" novalidate>
       <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
          <button class="btn btn-outline-dark" type="submit">Search</button>
          </form> 
          </div> 
    <div class="p-2">
          <a href="/AddEmployee" type="button" class="btn btn-primary align-self-center">Add Employee</a>
    </div>      

          </div>
          
          



<table class="table table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Employee ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Phone</th>
      <th scope="col">Address</th>
      <th scope="col">Position</th>
      <th scope="col">Status</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <th scope="row">{{this.emp_id}}</th>
      <td>{{this.emp_firstname}}</td>
      <td>{{this.emp_lastname}}</td>
      <td>{{this.phone}}</td>
      <td>{{this.address}}</td>
      <td>{{this.position}}</td>
      <td>{{this.status}}</td>
      <td class="text-end">
        <a href="/ViewEmployee/{{this.emp_id}}" type="button" class="btn btn-light btn small"><i class="bi bi-eye"></i>View</a>
        <a href="/EditEmployee/{{this.emp_id}}" type="button" class="btn btn-light btn small"><i class="bi bi-pencil"></i>Edit</a>

      </td>
    </tr>
  {{/each}}

  </tbody>
</table> 