
  <div class="p-2"><h2>Inventory</h2></div>
  {{!<div class="col-6"><h1>Users</h1></div>}}
   <div class="d-flex mb-3"> 

    <div class="p-2">
     <form class="d-flex" role="search" method="POST" action="/prodinvitem" novalidate>
       <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
          <button class="btn btn-outline-dark" type="submit">Search</button>
          </form>     
        </div> 

        <div class="p-2">
        <div class="btn-group">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
         Sort
        </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Item Name</a></li>
            <li><a class="dropdown-item" href="#">Category</a></li>
            <li><a class="dropdown-item" href="#">Supplier</a></li>
            <li><a class="dropdown-item" href="#">Date</a></li>
          </ul>
        </div> 
        </div>
        
      </div>
 


<table class="table table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Item Code</th>
      <th scope="col">Item Name</th>
      <th scope="col">Item Category</th>
      <th scope="col">Stock</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <th scope="row">{{this.item_id}}</th>
      <td>{{this.item_name}}</td>
      <td>{{this.category_name}}</td>
      <td>{{this.stock}}</td>
      <td class="text-end">
        <a href="/viewitem/{{this.item_id}}" type="button" class="btn btn-light btn small"><i class="bi bi-eye"></i>View</a>

      </td>
    </tr>
  {{/each}}

  </tbody>
</table> 