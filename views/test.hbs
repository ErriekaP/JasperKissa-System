<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/StockinEntryCart">Back</a></li>
    <li class="breadcrumb-item active" aria-current="page">Add Stocks</li>
  </ol>
</nav>  




<div class="row mb-5">

</div>
{{#each rows}}
  <form class="row g-3 needs-validation" method="POST" action="/StockinEntryCart/{{this.item_id}}" novalidate>
  <div class="bg-secondary p-2 text-dark bg-opacity-10 border border-2 rounded"> 
    {{/each}}

  <!-- Modal -->
   {{#each rows}}
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to add stock to {{this.item_name}} ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" >Close</button>
      
        <div class="d-grid gap-2">
          <button class="btn btn-primary" type="submit" data-bs-toggle="modal" data-bs-target="#exampleModal">Add</button>
          </div> 
      
      </div>
    </div>
  </div>
</div>  
{{/each}}

 {{#each reference_num}}    
  <div class="fs-6"><i class="bi bi-info-square-fill"> Reference# {{this.stockin_trans_id}}
   | {{this.company_name}}
   | {{this.address}}</i></div>
{{/each}}

{{#each rows}}

<div class="row mb-5">
  <div class="col text-center">
    <p></p>
    <h3>{{this.item_name}} {{this.item_category}}</h3>
  </div>
</div>


 <div class="row">
  <div class="col">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Item ID</th>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Quantity</th>
          <th scope="col">Cost</th>
          <th scope="col">Stock</th>
          <th scope="col" ></th>
          
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">{{this.item_id}}</th>
          <td>{{this.item_name}}</td>
          <td>{{this.category_name}}</td>
          <td>{{this.quantity}}</td>
          <td>{{this.price}}</td>
          <td>{{this.stock}}</td>
          <td>
         
               <div class="d-flex justify-content-start">
                <div class="p-2">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="Stock" name="stock">
                        <label for="floatingInput">Add Stock</label>
                        </div>
                </div>
            </div>
            
       

            </td>
        </tr>
      </tbody>
    </table>
  </div>
 </div>

<div class="row">
  <div class="col">
    <b>Description</b>
    </div>
  </div>
<div class="row">
  <div class="col">
    {{this.description}}
    </div>
  </div>
</div>
{{/each}}

<div class="d-grid gap-2">
      <button class="btn btn-primary" type="button"  data-bs-toggle="modal" data-bs-target="#exampleModal">Add</button>
      </div> 
     

</form>

