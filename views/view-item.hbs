<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/invitem">Back</a></li>
    <li class="breadcrumb-item active" aria-current="page">View Item</li>
  </ol>
</nav>

<div class="view-user p-5">
{{#each rows2}}
<div class="bg-secondary p-2 text-dark bg-opacity-10 border border-2 rounded"> 
<div class="row mb-5">
  <div class="col text-center">
    <h3>Item Details</h3>
  </div>
</div>
 <div class="row">
  <div class="col">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Item ID</th>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Brand</th>
          <th scope="col">Quantity</th>
          <th scope="col">Cost</th>
          <th scope="col">Price</th>
          <th scope="col">Total Stocks</th>
          <th scope="col">Type</th>
          <th scope="col">Encoded by</th>
          <th scope="col" >Date Added</th>
          
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">{{this.item_id}}</th>
          <td>{{this.item_name}}</td>
          <td>{{this.category_name}}</td>
          <td>{{this.brand_name}}</td>
          <td>{{this.quantity}}</td>
          <td>{{this.price}}</td>
          <td>{{this.final_price}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.type}}</td>
          <td>{{this.emp_firstname}}</td>
          <td>{{this.datein}}</td>
          
        </tr>
      </tbody>
    </table>
  </div>
 </div>

<div class="row">
  <div class="col">
    <b>Description</b>
    </div>
  </div>
<div class="row">
  <div class="col">
    {{this.description}}
    </div>
  </div>
</div>

<p></p>

{{/each}}


<div class="bg-secondary p-2 text-dark bg-opacity-10 border border-2 rounded"> 
<div class="row mb-5">
  <div class="col text-center">
    <h3>Item Stock-In History</h3>
  </div>
</div>

 <div class="row">
  <div class="col">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Reference#</th>
          <th scope="col">Stock Added</th>
          <th scope="col">Encoded by</th>
          <th scope="col" >Date of Stock-In</th>
          
        </tr>
      </thead>
      <tbody>
        {{#each rows}}
        <tr>
          <th scope="row">{{this.reff_num}}</th>
          <td>{{this.new_stock_added}}</td>
          <td>{{this.emp_firstname}}</td>
           <td>{{this.datein}}</td>

        </tr>
      </tbody>
      {{/each}}
    </table>
  </div>
 </div>
</div>




</div>