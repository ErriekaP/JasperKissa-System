{{> nav-bar}}
{{#each rows}}

<div class="flex flex-row mb-12 mx-10">
  <div class="flex flex-row justify-end mt-6 h-full w-1/3 mr-6 ">
        <img
        src="https://www.svgrepo.com/show/201784/employees.svg"
        class="h-64 w-64"
        alt="Employee Icon"
        />
    
  </div>

  <div class="basis-2/3 text-slate-800">

   <div class="px-8 mt-14 h-full w-full "> 

      <p class="font-bold uppercase text-4xl mb-14">{{this.emp_firstname}} {{this.emp_lastname}} {{this.employeeSuffix}}</p>


        <div>

          <div class="flex flex-row mb-4">
            <div class="basis-1/5 mr-2" >
              <label for="" class="block mb-0.5 text-sm font-medium text-slate-800">Employee ID</label>
              <input type="text" id="" class="rounded-lg bg-gray-50 border text-slate-800 focus:ring-slate-500 focus:border-slate-500 block flex-1 min-w-0 w-full text-sm border-gray-300 p-2.5" 
              value="{{this.emp_id}}"
              disabled readonly>
            </div>

            <div class="basis-2/5 mr-2">
              <label for="" class="block mb-0.5 text-sm font-medium text-slate-800">Email Address</label>
              <input type="text" id="" class="rounded-lg bg-gray-50 border text-slate-800 focus:ring-slate-500 focus:border-slate-500 block flex-1 min-w-0 w-full text-sm border-gray-300 p-2.5" 
              value="{{this.email}}"
              disabled readonly>
            </div>

            <div class="basis-2/5">
              <label for="" class="block mb-0.5 text-sm font-medium text-slate-800">Phone Number</label>
              <input type="text" id="" class="rounded-lg bg-gray-50 border text-slate-800 focus:ring-slate-500 focus:border-slate-500 block flex-1 min-w-0 w-full text-sm border-gray-300 p-2.5" 
              value="{{this.phone}}"
              disabled readonly>
            </div>

          </div>

          <div class="w-full mb-4">
            <label for="" class="block mb-0.5 text-sm font-medium text-slate-800">Complete Address</label>
              <input type="text" id="" class="rounded-lg bg-gray-50 border text-slate-800 focus:ring-slate-500 focus:border-slate-500 block flex-1 min-w-0 w-full text-sm border-gray-300 p-2.5" 
              value="{{this.address}}"
              disabled readonly>
          </div>

          <div class="flex flex-row mb-4">

            <div class="basis-1/4 mr-2" >
              <label for="" class="block mb-0.5 text-sm font-medium text-slate-800">Username</label>
              <input type="text" id="" class="rounded-lg bg-gray-50 border text-slate-800 focus:ring-slate-500 focus:border-slate-500 block flex-1 min-w-0 w-full text-sm border-gray-300 p-2.5" 
              value="{{this.username}}"
              disabled readonly>
            </div>

            <div class="basis-1/4 mr-2">
              <label for="" class="block mb-0.5 text-sm font-medium text-slate-800">Password</label>
              <input type="text" id="" class="rounded-lg bg-gray-50 border text-slate-800 focus:ring-slate-500 focus:border-slate-500 block flex-1 min-w-0 w-full text-sm border-gray-300 p-2.5" 
              value="{{this.password}}"
              disabled readonly>
            </div>

            <div class="basis-1/4 mr-2">
              <label for="" class="block mb-0.5 text-sm font-medium text-slate-800">Position</label>
              <input type="text" id="" class="rounded-lg bg-gray-50 border text-slate-800 focus:ring-slate-500 focus:border-slate-500 block flex-1 min-w-0 w-full text-sm border-gray-300 p-2.5" 
              value="{{this.position}}"
              disabled readonly>
            </div>

            <div class="basis-1/4">
              <label for="" class="block mb-0.5 text-sm font-medium text-slate-800">Status</label>
              <input type="text" id="" class="rounded-lg bg-gray-50 border text-slate-800 focus:ring-slate-500 focus:border-slate-500 block flex-1 min-w-0 w-full text-sm border-gray-300 p-2.5" 
              value="{{this.status}}"
              disabled readonly>
            </div>
            <a href="/editpassword/{{this.emp_id}}" type="button" class="btn btn-small"><i class="bi bi-pencil"></i>Edit Password</a>
          </div>
        </div>
   </div>

  </div>
</div>
{{/each}}