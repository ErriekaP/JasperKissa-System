<div class="p-2"><h2>Stock In History</h2></div>
  {{!<div class="col-6"><h1>Users</h1></div>}}
   <div class="d-flex mb-3"> 

    <div class="p-2">
     <form class="d-flex" role="search" method="POST" action="/StockinHistoryPage" novalidate>
       <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
          <button class="btn btn-outline-dark" type="submit">Search</button>
          </form>     
        </div> 

        <div class="p-2">
         <div class="btn-group">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
         Sort
        </button>
          <ul class="dropdown-menu">
             <form  method="POST" action="/StockinHistoryPage/itemid" novalidate>
            <li><button class="dropdown-item" href="/StockinHistoryPage/itemid" type="sort">Item ID</button></li>
            </form>
           <form  method="POST" action="/StockinHistoryPage/itemname" novalidate>
            <li><button class="dropdown-item" href="/StockinHistoryPage/itemname" type="sort">Item Name</button></li>
            </form>
            <form  method="POST" action="/StockinHistoryPage/category" novalidate>
            <li><button class="dropdown-item" href="/StockinHistoryPage/category">Category</button></li>
            </form>
            <form  method="POST" action="/StockinHistoryPage/supplier" novalidate>
            <li><button class="dropdown-item" href="/StockinHistoryPage/supplier">Supplier</button></li>
            </form>
            <form  method="POST" action="/StockinHistoryPage/date" novalidate>
            <li><button class="dropdown-item" href="/StockinHistoryPage/date">Date</button></li>
            </form>
            
          </ul>
         
        </div>  
        </div>
        
      </div>
 


<table class="table table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Item ID</th>
      <th scope="col">Reference #</th>
      <th scope="col">Item Name</th>
      <th scope="col">Brand</th>
      <th scope="col">Item Category</th>
      <th scope="col">Supplier</th>
      <th scope="col">Cost</th>
      <th scope="col">Price</th>
      <th scope="col">Stock Added</th>
      <th scope="col">Encoded By</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <th scope="row">{{this.item_id}}</th>
      <td>{{this.reference_num}}</td>
      <td>{{this.item_name}}</td>
      <td>{{this.brand_name}}</td>
      <td>{{this.category_name}}</td>
      <td>{{this.company_name}}</td>
      <td>{{this.price}}</td>
      <td>{{this.final_price}}</td>
      <td>{{this.new_stock}}</td>
      <td>{{this.emp_firstname}}</td>
      <td>{{this.date_stock}}</td>

    </tr>
  {{/each}}

  </tbody>
</table> 